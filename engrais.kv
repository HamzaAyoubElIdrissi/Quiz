<OptionButton>
    font_name: 'BKANT'
    font_size: '10.9sp'
    text_color: "black"
    md_background_normal: ''
    md_bg_color: 206/255, 231/255, 232/255, 1
    line_color: rgba(38, 81, 96, 255)
    halign: "left"
    pos_hint: {"center_x": 0.5}
    # color: rgba(10, 10, 10, 255)
    on_release: 
        app.quiz(self.text, self)
        
MDScreen:
    question: question
    resp: resp
    name: "engrais"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
    
        FitImage:
            source: "assets/f1.png"
                #size_hint_y: 1
            size_hint: 1, .4
            pos_hint: {"center_x": .5,"center_y": .20}
            #radius: 19, 19, 19, 19
    
        MDLabel:
            text:"Fertilizer Quiz"
            font_name: 'BRLNSR'
            halign: "center"
            font_size: '26sp'
            pos_hint: {'center_y': .94}
            color: rgba(0, 0, 128, 255)

        MDLabel:
            id: resp
            text:"Test your Knowledge"
            font_name: 'BKANT'
            font_size: '15sp'
            pos_hint: {'center_x':.50,'center_y': .87}
            halign: "center"
            color: rgba(119,136,153, 255)
        
        MDCard:
            size_hint: None, None
            size: 290,290
            pos_hint: {"center_x":0.5,"center_y":0.58}
            elevation: 1
            md_bg_color:"aliceblue"
            padding: 5
            spacing: 6
            radius: 12
            orientation:"vertical"
            # on_release: 
            #     root.manager.transition.direction = "left"
            #     root.manager.current="materiel"
            
            BoxLayout:
                orientation:"vertical"
                adaptive_size: True
                spacing:2
                

                MDLabel:
                    id: question
                    text: ""
                    font_name: 'BKANT'
                    font_size: '15sp'
                    pos_hint: {'center_y': .99}
                    halign: "center"
                    color: rgba(112, 128, 144, 255)
                
                BoxLayout:
                    orientation:"vertical"
                    adaptive_size: True
                    spacing:10

                    OptionButton:
                        id: option1
                        text:""
              
                    OptionButton:
                        id: option2
                        text:""
                        
                    OptionButton:
                        id: option3
                        text:""

                    OptionButton:
                        id: option4
                        text:""
        
        MDRectangleFlatIconButton:
            text:'Next'
            icon: "arrow-right-bold-hexagon-outline"
            icon_color: "navy"
            font_name: 'BKANT'
            line_color: "navy"
            font_size: "17sp"
            size_hint: .27, .045
            text_color: "navy"
            pos_hint: {'center_x':.2, 'center_y':.28}
            on_release: app.next_question()

        MDRectangleFlatIconButton:
            text:'Quit'
            icon: "exit-to-app"
            icon_color: "darkcyan"
            line_color: "darkcyan"
            font_name: 'BKANT'
            font_size: "17sp"
            size_hint: .27, .045
            text_color: "darkcyan"
            pos_hint: {'center_x':.55, 'center_y':.28}
            on_release: app.final_score()
              