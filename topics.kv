MDScreen:
    name: "topics"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDRectangleFlatButton:
            text:"Quit"
            text_color: "white"
            size_hint: .66, .075
            md_bg_color: "mediumslateblue"
            line_color: "skyblue"
            #color: rgba(0, 0, 0, 255)
            font_name: 'BRLNSDB'
            background_color: 0, 0, 0, 0
            pos_hint:{"center_x":.5,"center_y":0.07}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "main"
        MDLabel:
            text:"Topics"
            font_name: 'BRLNSR'
            font_size: '26sp'
            pos_hint: {'center_x': .88,'center_y': .94}
            color: rgba(0, 0, 128, 255)

        MDLabel:
            text:"Choose the topic that matches your concern"
            font_name: 'BKANT'
            font_size: '20sp'
            pos_hint: {'center_x':.50,'center_y': .87}
            halign: "center"
            color: rgba(119,136,153, 255)


